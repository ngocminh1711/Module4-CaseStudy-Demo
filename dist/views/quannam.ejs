<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('header/head-shop')%>

</head>

<body>
    <!-- ##### Header Area Start ##### -->
    <%-include ('header/header-shop')%>
    <!-- ##### Header Area End ##### -->

    <!-- ##### Right Side Cart Area ##### -->
    <div class="cart-bg-overlay"></div>

    <div class="right-side-cart-area">

        <!-- Cart Button -->
        <div class="cart-button">
            <a href="#" id="rightSideCart"><img src="img/core-img/bag.svg" alt=""> <span>3</span></a>
        </div>

        <%- include ('header/cart-shop')%>
    </div>
    <!-- ##### Right Side Cart End ##### -->

    <!-- ##### Breadcumb Area Start ##### -->
    <div class="breadcumb_area bg-img" style="background-image: url(img/bg-img/breadcumb.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="page-title text-center">
                        <h2>Pants</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Breadcumb Area End ##### -->

    <!-- ##### Shop Grid Area Start ##### -->
    <section class="shop_grid_area section-padding-80">
        <div class="container">
            <div class="row">
                <%- include ('header/left-side-catagories-shop')%>

                <div class="col-12 col-md-8 col-lg-9">
                    <div class="shop_grid_product_area">
                        <%- include ('header/side-search-shop')%>

                        <div class="row">

                            <!-- Single Product -->
                            <% products.forEach((item, index)=> { %>
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="single-product-wrapper">
                                    <!-- Product Image -->
                                    <div class="product-img">
                                        <img src="<%= item.image1%>" alt="">
                                        <!-- Hover Thumb -->
                                        <img class="hover-img" src="<%item.image2%>" alt="">
                                        <!-- Product Badge -->
                                        <div class="product-badge offer-badge">
                                            <span>-30%</span>
                                        </div>
                                        <!-- Favourite -->
                                        <div class="product-favourite">
                                            <a href="#" class="favme fa fa-heart"></a>
                                        </div>
                                    </div>
                                    <!-- Product Description -->
                                    <div class="product-description">
                                        <span>topshop</span>
                                        <a href="single-product-details.html">
                                            <h6><%= item.detail%></h6>
                                        </a>
                                        <p class="product-price"><span class="old-price">$75.00</span> <%= item.price%></p>

                                        <!-- Hover Content -->
                                        <div class="hover-content">
                                            <!-- Add to Cart -->
                                            <div class="add-to-cart-btn">
                                                <button onclick="addToCart(`<%= item._id%>`)" type="button" class="btn essence-btn">Add to Cart</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% })%>
                        </div>
                    </div>
                    <!-- Pagination -->
                    <div class="row">
                        <!-- pagination -->
                        <% if(pages> 0) { %>
                            <!-- show pagination if there is pages -->
                            <nav class="mx-auto">
                                <ul class="pagination" style="margin-top: 2rem;">
                                    <!-- FIRST ITEM -->
                                    <% if(current===1) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/quannam">First</a>
                                        </li>
                                    <% } else { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/quannam">First</a>
                                        </li>
                                    <% } %>
                                    <!-- ITEMS  -->
                                    <% var i=(Number(current)> 3 ? Number(current) - 2 : 1) %>
                                    <% if(i !==1) { %>
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                    <% } %>
                                    <% for(; i <=(Number(current) + 2) && i <=pages; i++) { %>
                                        <% if(i==current) { %>
                                            <li class="page-item active">
                                                <a class="page-link" href="/quannam/<%= i %>/">
                                                    <%= i %>
                                                </a>
                                            </li>
                                        <% } else { %>
                                            <li class="page-item">
                                                <a class="page-link" href="/quannam/<%= i %>/">
                                                    <%= i %>
                                                </a>
                                            </li>
                                        <% } %>
                                        <% if (i==Number(current) + 2 && i < pages) { %>
                                            <li class="page-item disabled">
                                                <a class="page-link" href="#">...</a>
                                            </li>
                                        <% } %>
                                    <% } %>
                                    <!-- LAST ITEM -->
                                    <% if(current==pages) { %>
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">
                                                Last
                                            </a>
                                        </li>
                                    <% } else { %>
                                        <li class="page-item">
                                            <a class="page-link"
                                               href="/quannam/<%= pages %>/">
                                                Last
                                            </a>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Shop Grid Area End ##### -->

    <!-- ##### Footer Area Start ##### -->
    <%- include ('footer/footer-shop')%>

</body>

</html>